<h1><%= @author.name %></h1>
<table>
  <tr>
    <th>Title</th>
    <th>Source</th>
  </tr>
<% @stories.each do |story| %>
  <tr>
    <td><%= link_to story.title, story_path(story) %></td>
    <td><%= story.source.name %></td>
  </tr>
<% end %>
</table>
<br />
<%= will_paginate @stories %>
<br />

<%= link_to 'Merge', merge_author_path( @author ) %>
| <%= link_to 'Author Index', authors_path %>